<Window x:Class="SimpleMultithreading.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        Height="350"
        Width="525">
    
    <StackPanel>

        <Button Content="Start (crashes the app)"
                Height="80"
                Margin="10"
                Click="StartCrashClick" />

        <Button Content="Start (succeeds)"
                Height="80"
                Margin="10"
                Click="StartSuccessClick" />

        <TextBlock x:Name="StatusTextBlock"
                   Margin="10"
                   FontSize="24" />

    </StackPanel>
</Window>
